<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background_court"
    tools:context="com.akristic.www.tkrally.PlayersNamesActivity">

    <LinearLayout
        android:id="@+id/change_players_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grayLightWhite"
        android:orientation="vertical"
        android:padding="@dimen/medium_horizontal_margin"
        tools:visibility="visible">

        <EditText
            android:id="@+id/player1_change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/player_1"
            android:inputType="textPersonName"
            android:maxLength="35"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/image_player1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/player_silhouette" />


        <Button
            android:id="@+id/add_picture_player1"
            style="@style/score_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add picture"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grayLightWhite"
        android:orientation="vertical"
        android:padding="@dimen/medium_horizontal_margin">

        <EditText
            android:id="@+id/player2_change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/player_2"
            android:inputType="textPersonName"
            android:maxLength="35"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/image_player2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/player_silhouette" />

        <Button
            android:id="@+id/add_picture_player2"
            style="@style/score_btn_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add picture"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>
