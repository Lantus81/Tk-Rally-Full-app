<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="score_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/score_btn_shape</item>

    </style>

    <style name="sets_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/x_small_margin</item>
        <item name="android:layout_marginRight">@dimen/x_small_margin</item>
        <item name="android:layout_marginTop">@dimen/x_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/x_small_margin</item>
        <item name="android:background">@drawable/score_display</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">0</item>

    </style>

    <style name="score_display_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">@dimen/small_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/small_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/small_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/minimum_margin</item>
        <item name="android:background">@drawable/score_display</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grayLightButtons</item>
        <item name="android:text">0</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!-- Player Images-->
    <style name="PlayerImage">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/player_silhouette</item>
    </style>

    <style name="TextForSets">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextForSetsBlack">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="playersNames">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">3</item>
        <item name="android:maxLength">16</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="setsGamesPointsBig">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:text">@string/show_0</item>
    </style>

    <style name="serveStyleLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>