<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/minimum_margin"
    android:paddingLeft="@dimen/minimum_margin"
    android:paddingRight="@dimen/minimum_margin"
    android:paddingTop="@dimen/minimum_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.akristic.www.tkrally.NavigationScoreKeeperActivity"
    tools:showIn="@layout/app_bar_navigation">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="81dp">

        <!-- HORIZONTAL GUIDELINE -->
        <android.support.constraint.Guideline
            android:id="@+id/guide_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.46" />
        <!-- HORIZONTAL GUIDELINE -->
        <android.support.constraint.Guideline
            android:id="@+id/guide_horizontal_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.88" />

        <!-- VERTICAL GUIDELINE AT 5% -->
        <android.support.constraint.Guideline
            android:id="@+id/guide_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_court2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/small_horizontal_margin"
            android:layout_marginLeft="@dimen/minimum_margin"
            android:layout_marginRight="@dimen/small_vertical_margin"
            android:layout_marginTop="@dimen/small_horizontal_margin"
            android:background="@color/transparentBlack"
            android:paddingRight="@dimen/small_vertical_margin"
            android:paddingLeft="@dimen/small_vertical_margin"
            android:paddingTop="@dimen/medium_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="@id/guide_horizontal_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guide_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <!-- VERTICAL GUIDELINE AT 60% -->
            <android.support.constraint.Guideline
                android:id="@+id/guide_vertical_player_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" />

            <!-- HORIZONTAL GUIDELINE AT 30% -->
            <android.support.constraint.Guideline
                android:id="@+id/guide_horizontal_player_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25" />
            <!-- HORIZONTAL GUIDELINE AT 30% -->
            <android.support.constraint.Guideline
                android:id="@+id/guide_horizontal2_player_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <ImageView
                android:id="@+id/score_image_player1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="32dp"
                android:onClick="changePlayersNames"
                android:scaleType="centerCrop"
                android:src="@drawable/player_black"
                app:layout_constraintBottom_toTopOf="@id/guide_horizontal2_player_1"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/guide_vertical_player_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mask"
                app:layout_constraintBottom_toBottomOf="@id/guide_horizontal2_player_1"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toRightOf="@id/guide_vertical_player_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/player1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_horizontal_margin"
                android:layout_marginLeft="@dimen/medium_horizontal_margin"
                android:layout_marginStart="@dimen/medium_horizontal_margin"
                android:layout_marginTop="@dimen/medium_horizontal_margin"
                android:maxLength="35"
                android:onClick="changePlayersNames"
                android:textColor="@color/grayLight"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Ime i Prezime" />


            <ImageView
                android:id="@+id/score_ball_serve"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/medium_horizontal_margin"
                android:layout_marginStart="@dimen/medium_horizontal_margin"
                android:onClick="changeServeFirstPlayer"
                android:src="@drawable/tennis_ball"
                app:layout_constraintBottom_toTopOf="@id/guide_horizontal_player_1"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player1_name" />

            <TextView
                android:id="@+id/serve_color_Player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_horizontal_margin"
                android:layout_marginLeft="@dimen/medium_horizontal_margin"
                android:background="@color/colorAccent"
                android:onClick="changeServeFirstPlayer"
                android:padding="@dimen/small_horizontal_margin"
                android:text="@string/serve"
                android:textColor="@color/grayLight"
                android:textSize="12sp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@id/guide_horizontal_player_1"
                app:layout_constraintLeft_toRightOf="@id/score_ball_serve"
                app:layout_constraintTop_toBottomOf="@id/player1_name" />

            <TextView
                android:id="@+id/save_sets_player1_set_1"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/save_sets_player1_set_2"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/save_sets_player1_set_1" />

            <TextView
                android:id="@+id/save_sets_player1_set_3"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/save_sets_player1_set_2" />

            <TextView
                android:id="@+id/save_sets_player1_set_4"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/save_sets_player1_set_3" />

            <TextView
                android:id="@+id/save_sets_player1_set_5"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/save_sets_player1_set_4" />


            <android.support.constraint.ConstraintLayout
                android:id="@+id/buttons_layout_holder_player_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/medium_horizontal_margin"
                android:layout_marginRight="0dp"
                android:layout_marginTop="@dimen/small_horizontal_margin"
                android:background="@color/transparentBlack"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/guide_vertical_player_1"
                app:layout_constraintTop_toBottomOf="@id/guide_horizontal_player_1">
                <!-- VERTICAL GUIDELINE AT 50% -->

                <android.support.constraint.Guideline
                    android:id="@+id/guide_vertical_buttons_player_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <android.support.constraint.Guideline
                    android:id="@+id/guide_horizontal_buttons_player_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.3" />

                <android.support.constraint.Guideline
                    android:id="@+id/guide_horizontal2_buttons_player_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.7" />

                <Button
                    android:id="@+id/button_player1_ace"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer1Ace"
                    android:text="@string/ace"
                    app:layout_constraintBottom_toTopOf="@id/guide_horizontal_buttons_player_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guide_vertical_buttons_player_1"
                    app:layout_constraintTop_toTopOf="parent">

                </Button>

                <Button
                    android:id="@+id/button_player1_fault"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer1Fault"
                    android:text="@string/fault"
                    app:layout_constraintBottom_toTopOf="@id/guide_horizontal_buttons_player_1"
                    app:layout_constraintLeft_toRightOf="@id/guide_vertical_buttons_player_1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button_player1_winner"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer1"
                    android:text="@string/winner"
                    app:layout_constraintBottom_toTopOf="@id/guide_horizontal2_buttons_player_1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guide_horizontal_buttons_player_1" />

                <Button
                    android:id="@+id/button_player1_f_error"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer1ForError"
                    android:text="@string/forced_error_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guide_vertical_buttons_player_1"
                    app:layout_constraintTop_toBottomOf="@id/guide_horizontal2_buttons_player_1" />

                <Button
                    android:id="@+id/button_player1_unf_error"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer1UnfError"
                    android:text="@string/unf_error_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/guide_vertical_buttons_player_1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guide_horizontal2_buttons_player_1" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/small_horizontal_margin"
                android:layout_marginEnd="@dimen/minimum_margin"
                android:layout_marginLeft="@dimen/small_horizontal_margin"
                android:layout_marginRight="@dimen/minimum_margin"
                android:layout_marginStart="@dimen/small_horizontal_margin"
                android:layout_marginTop="@dimen/small_horizontal_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/guide_vertical_player_1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guide_horizontal2_player_1">
                <!-- VERTICAL GUIDELINE AT 50% -->
                <android.support.constraint.Guideline
                    android:id="@+id/player1_vertical_points_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6" />

                <android.support.constraint.Guideline
                    android:id="@+id/player1_vertical_points_display_games"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3" />

                <android.support.constraint.Guideline
                    android:id="@+id/player1_horizontal_points_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75" />


                <!--SCORE-->
                <TextView
                    android:id="@+id/player_1_points_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/grayLightButtons"
                    android:text="@string/points"
                    app:layout_constraintLeft_toRightOf="@id/player1_vertical_points_display"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/player_1_points"
                    style="@style/score_display_style"
                    app:layout_constraintBottom_toBottomOf="@id/player1_horizontal_points_display"
                    app:layout_constraintLeft_toRightOf="@id/player1_vertical_points_display"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/player_1_points_text" />

                <TextView
                    android:id="@+id/player_1_games_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/grayLightButtons"
                    android:text="@string/games"
                    app:layout_constraintLeft_toRightOf="@id/player1_vertical_points_display_games"
                    app:layout_constraintRight_toLeftOf="@id/player1_vertical_points_display"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/player_1_games"
                    style="@style/score_display_style"
                    android:layout_marginLeft="@dimen/small_horizontal_margin"
                    app:layout_constraintBottom_toTopOf="@id/player1_horizontal_points_display"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toRightOf="@id/player1_vertical_points_display_games"
                    app:layout_constraintRight_toLeftOf="@id/player1_vertical_points_display"
                    app:layout_constraintTop_toBottomOf="@id/player_1_games_text" />
                <TextView
                    android:id="@+id/player_1_sets_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/grayLightButtons"
                    android:text="@string/sets"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/player1_vertical_points_display_games"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/player_1_sets"
                    style="@style/score_display_style"
                    app:layout_constraintBottom_toTopOf="@id/player1_horizontal_points_display"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/player1_vertical_points_display_games"
                    app:layout_constraintTop_toBottomOf="@id/player_1_sets_text" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/small_horizontal_margin"
            android:layout_marginLeft="@dimen/small_vertical_margin"
            android:layout_marginRight="0dp"
            android:layout_marginTop="@dimen/small_vertical_margin"
            android:background="@color/transparentBlack"
            android:paddingRight="@dimen/small_horizontal_margin"
            android:paddingLeft="@dimen/small_vertical_margin"
            android:paddingTop="@dimen/medium_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="@id/guide_horizontal_bottom"
            app:layout_constraintLeft_toRightOf="@id/guide_vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- VERTICAL GUIDELINE AT 50% -->
            <android.support.constraint.Guideline
                android:id="@+id/guide_vertical_player_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55" />

            <!-- HORIZONTAL GUIDELINE AT 30% -->
            <android.support.constraint.Guideline
                android:id="@+id/guide_horizontal_player_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />
            <!-- HORIZONTAL GUIDELINE AT 30% -->
            <android.support.constraint.Guideline
                android:id="@+id/guide_horizontal2_player_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25" />

            <ImageView
                android:id="@+id/score_image_player2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="32dp"
                android:onClick="changePlayersNames"
                android:scaleType="centerCrop"
                android:src="@drawable/player_black"
                app:layout_constraintBottom_toBottomOf="@id/guide_horizontal_player_2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guide_vertical_player_2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mask"
                app:layout_constraintBottom_toBottomOf="@id/guide_horizontal_player_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/guide_vertical_player_2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/player2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_horizontal_margin"
                android:layout_marginEnd="@dimen/medium_horizontal_margin"
                android:layout_marginRight="@dimen/medium_horizontal_margin"
                android:layout_marginTop="@dimen/medium_horizontal_margin"
                android:maxLength="35"
                android:onClick="changePlayersNames"
                android:textColor="@color/grayLight"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Ime i Prezime" />

            <TextView
                android:id="@+id/save_sets_player2_set_1"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/save_sets_player2_set_2"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/save_sets_player2_set_1" />

            <TextView
                android:id="@+id/save_sets_player2_set_3"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/save_sets_player2_set_2" />

            <TextView
                android:id="@+id/save_sets_player2_set_4"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/save_sets_player2_set_3" />

            <TextView
                android:id="@+id/save_sets_player2_set_5"
                style="@style/sets_style"
                android:visibility="invisible"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/save_sets_player2_set_4" />

            <ImageView
                android:id="@+id/score_ball_serve_player_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/minimum_margin"
                android:onClick="changeServeFirstPlayer"
                android:src="@drawable/tennis_ball"
                app:layout_constraintBottom_toTopOf="@id/guide_horizontal2_player_2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="@id/guide_vertical_player_2"
                app:layout_constraintTop_toBottomOf="@id/player2_name" />

            <TextView
                android:id="@+id/serve_color_Player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_horizontal_margin"
                android:layout_marginLeft="@dimen/medium_horizontal_margin"
                android:onClick="changeServeFirstPlayer"
                android:padding="@dimen/small_horizontal_margin"
                tools:text="@string/serve"
                android:textColor="@color/grayLight"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/player2_name"
                app:layout_constraintBottom_toTopOf="@id/guide_horizontal2_player_2"
                app:layout_constraintLeft_toRightOf="@id/score_ball_serve_player_2" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/buttons_layout_holder_player_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/small_horizontal_margin"
                android:layout_marginRight="@dimen/minimum_margin"
                android:layout_marginTop="@dimen/medium_vertical_margin"
                android:background="@color/transparentBlack"
                android:padding="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/guide_vertical_player_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/guide_horizontal2_player_2">
                <!-- VERTICAL GUIDELINE AT 50% -->

                <android.support.constraint.Guideline
                    android:id="@+id/guide_vertical_buttons_player_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <android.support.constraint.Guideline
                    android:id="@+id/guide_horizontal_buttons_player_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.3" />

                <android.support.constraint.Guideline
                    android:id="@+id/guide_horizontal2_buttons_player_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.7" />

                <Button
                    android:id="@+id/button_player2_ace"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer2Ace"
                    android:text="@string/ace"
                    app:layout_constraintBottom_toTopOf="@id/guide_horizontal_buttons_player_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guide_vertical_buttons_player_2"
                    app:layout_constraintTop_toTopOf="parent">

                </Button>

                <Button
                    android:id="@+id/button_player2_fault"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer2Fault"
                    android:text="@string/fault"
                    app:layout_constraintBottom_toTopOf="@id/guide_horizontal_buttons_player_2"
                    app:layout_constraintLeft_toRightOf="@id/guide_vertical_buttons_player_2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button_player2_winner"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer2"
                    android:text="@string/winner"
                    app:layout_constraintBottom_toTopOf="@id/guide_horizontal2_buttons_player_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guide_horizontal_buttons_player_2" />

                <Button
                    android:id="@+id/button_player2_f_error"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer2ForError"
                    android:text="@string/forced_error_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guide_vertical_buttons_player_2"
                    app:layout_constraintTop_toBottomOf="@id/guide_horizontal2_buttons_player_2" />

                <Button
                    android:id="@+id/button_player2_u_error"
                    style="@style/score_btn_style"
                    android:onClick="addPointForPlayer2UnfError"
                    android:text="@string/unf_error_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/guide_vertical_buttons_player_2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guide_horizontal2_buttons_player_2" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/small_horizontal_margin"
                android:layout_marginEnd="@dimen/minimum_margin"
                android:layout_marginLeft="@dimen/small_horizontal_margin"
                android:layout_marginRight="@dimen/minimum_margin"
                android:layout_marginStart="@dimen/small_horizontal_margin"
                android:layout_marginTop="@dimen/small_horizontal_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/guide_vertical_player_2"
                app:layout_constraintTop_toBottomOf="@id/guide_horizontal_player_2">
                <!-- VERTICAL GUIDELINE AT 50% -->
                <android.support.constraint.Guideline
                    android:id="@+id/player2_vertical_points_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.40" />
                <android.support.constraint.Guideline
                    android:id="@+id/player2_vertical_points_display_games"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.7" />

                <android.support.constraint.Guideline
                    android:id="@+id/player2_horizontal_points_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.75" />


                <!--SCORE-->
                <TextView
                    android:id="@+id/player_2_points_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/grayLightButtons"
                    android:text="@string/points"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/player2_vertical_points_display"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/player_2_points"
                    style="@style/score_display_style"
                    app:layout_constraintBottom_toTopOf="@id/player2_horizontal_points_display"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/player2_vertical_points_display"
                    app:layout_constraintTop_toBottomOf="@id/player_2_points_text" />

                <TextView
                    android:id="@+id/player_2_games_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/grayLightButtons"
                    android:text="@string/games"
                    app:layout_constraintLeft_toRightOf="@id/player2_vertical_points_display"
                    app:layout_constraintRight_toRightOf="@id/player2_vertical_points_display_games"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/player_2_games"
                    style="@style/score_display_style"
                    app:layout_constraintBottom_toTopOf="@id/player2_horizontal_points_display"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintRight_toLeftOf="@id/player2_vertical_points_display_games"
                    app:layout_constraintLeft_toRightOf="@id/player2_vertical_points_display"
                    app:layout_constraintTop_toBottomOf="@id/player_2_games_text" />


                <TextView
                    android:id="@+id/player_2_sets_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/grayLightButtons"
                    android:text="@string/sets"
                    app:layout_constraintLeft_toRightOf="@id/player2_vertical_points_display_games"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/player_2_sets"
                    style="@style/score_display_style"
                    app:layout_constraintBottom_toTopOf="@id/player2_horizontal_points_display"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toRightOf="@id/player2_vertical_points_display_games"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/player_2_sets_text" />



            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/deuce"
            style="@style/score_display_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="140dp"
            android:padding="@dimen/small_horizontal_margin"
            android:text="Deuce"
            android:textColor="@color/grayLight"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.88" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#55000000"
            android:paddingBottom="@dimen/small_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/small_vertical_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/guide_horizontal_bottom">

            <ImageView
                android:id="@+id/button_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openStatistics"
                android:src="@drawable/ic_poll_black_24dp"
                android:tint="@color/grayLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_undo_black_24dp"
                android:tint="@color/grayLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_statistics"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_redo_black_24dp"
                android:tint="@color/grayLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/button_statistics"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
